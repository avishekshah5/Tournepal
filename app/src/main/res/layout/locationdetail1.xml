<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_locationdetail1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.avh.tour_dev.locationdetail1">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="#3c413a"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="257dp"

        android:minLines="4"
        android:textColorHint="#000"
        android:textStyle="bold"
        android:textSize="25sp"
        android:hint="@string/description"
        android:background="#ab49b90c"
        android:id="@+id/descriptioninfo"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/descriptioninfo"
        android:id="@+id/view"
        android:background="#3c413a"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/view"
        android:id="@+id/view1"

        android:background="#3c413a"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view1"
        android:minLines="4"
        android:textColorHint="#FFF"
        android:textStyle="bold"
        android:textSize="25sp"
        android:hint="@string/accomodation"
        android:id="@+id/accomodationinfo"
        android:background="#eb0e78f1"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="#000"
        android:layout_below="@+id/accomodationinfo" />
</RelativeLayout>


